<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".ManagerActivity" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >
        
       	<LinearLayout 
            android:layout_width="0dip"
            android:layout_height="match_parent"
        	android:layout_weight="1"
        	android:layout_gravity="center"
        	android:gravity="center"
            android:orientation="vertical" >
            
        <ImageButton
            android:id="@+id/adressies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onAdressiesClick" 
            android:src="@drawable/selector_btn_adress"
            android:background="@android:color/transparent" />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_orange"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="@string/str_contacts"/>
        </LinearLayout>

<!--        <LinearLayout 
            android:layout_width="0dip"
        	android:layout_weight="1"
            android:layout_height="match_parent"
        	android:layout_gravity="center"
        	android:gravity="center"
            android:orientation="vertical" >
        
        <ImageButton
            android:id="@+id/projects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_btn_projects"
            android:background="@android:color/transparent"
            android:onClick="onProjectsClick" /> 
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_orange"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="@string/projects"/> 
        </LinearLayout> -->
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        
            <ImageButton 
                android:id="@+id/my_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onMyEventsClick"
                android:src="@drawable/selector_btn_my_events"
                android:background="@android:color/transparent"/>        	
               
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            	android:textColor="@color/text_orange"
            	android:textAppearance="@android:style/TextAppearance.Small"
            	android:gravity="center_horizontal"
            	android:text="@string/my_events" />
        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >
     
        <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center"
        android:orientation="vertical">            
        	
        	<ImageButton 
                android:id="@+id/social_network"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onSocialNetworkClick"
                android:src="@drawable/selector_btn_social_network"
                android:background="@android:color/transparent"/>
        	<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            	android:textColor="@color/text_orange"
            	android:textAppearance="@android:style/TextAppearance.Small"
            	android:gravity="center_horizontal"
            	android:text="@string/social_networks" />
        </LinearLayout> 
        
        <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:gravity="center">
        	 
        	<ImageButton 
                android:id="@+id/my_purse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onMyPurseClick"
                android:src="@drawable/selector_btn_purse"
                android:background="@android:color/transparent"/>        	
             
             <TextView
                android:layout_width="wrap_content"                
                android:layout_height="wrap_content"
            	android:textColor="@color/text_orange"
            	android:textAppearance="@android:style/TextAppearance.Small"
            	android:gravity="center_horizontal"
            	android:text="@string/my_wallet" />
        </LinearLayout> 
    </TableRow>
</TableLayout>
